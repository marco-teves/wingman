function dupeWorkoutSlots() {
    const template = document.getElementById('workoutSlotsTemplate');
    const workoutPlan = document.querySelector('.workoutPlan');
  
    for (let i = 0; i < 6; i++) {
      const clone = document.importNode(template.content, true);
      workoutPlan.appendChild(clone);
    }
    
    // Select workout items and slots after they have been created
    const workoutItems = document.querySelectorAll(".workoutItem");
    const workoutSlots = document.querySelectorAll(".workoutSlots");
  
    workoutItems.forEach(item => {
      item.addEventListener("dragstart", dragStart);
    });
  
    workoutSlots.forEach(slot => {
      slot.addEventListener("dragover", dragOver);
      slot.addEventListener("drop", drop);
    });
  }
  
  // Move drag-and-drop functions inside dupeWorkoutSlots
  function dragStart(event) {
    event.dataTransfer.setData("text/plain", event.target.textContent);
  }
  
  function dragOver(event) {
    event.preventDefault();
  }
  
  function drop(event) {
    event.preventDefault();
    const data = event.dataTransfer.getData("text/plain");
    const newItem = document.createElement("div");
    newItem.textContent = data;
    newItem.classList.add("workoutItem");
    newItem.draggable = true;
    this.appendChild(newItem);
  }
  
  // Call dupeWorkoutSlots to set up drag-and-drop after DOM is loaded
  document.addEventListener("DOMContentLoaded", () => {
    dupeWorkoutSlots();
    dupeWorkoutItems();
    
  });